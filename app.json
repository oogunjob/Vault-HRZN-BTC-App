{
  "expo": {
    "name": "HRZN",
    "slug": "hrzn",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "com.hrznbtc.hrzn",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hrznbtc.hrzn",
      "infoPlist": {
        "NSCameraUsageDescription": "This app requires camera access to scan QR codes for wallet transactions.",
        "NSPhotoLibraryUsageDescription": "This app requires photo library access to save and load wallet QR codes.",
        "NSPhotoLibraryAddUsageDescription": "This app requires permission to save QR codes to your photo library.",
        "NSFaceIDUsageDescription": "This app uses Face ID for secure authentication to access your wallet.",
        "NSLocationWhenInUseUsageDescription": "This app may use your location for enhanced security features.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.hrznbtc.hrzn",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "VIBRATE"
      ]
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0"
          }
        }
      ],
      [
        "react-native-capture-protection",
        {
          "captureType": "base"
        }
      ],
      [
        "react-native-permissions",
        {
          "iosPermissions": [
            "Camera",
            "PhotoLibrary",
            "PhotoLibraryAddOnly",
            "FaceID"
          ]
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/transparent-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#F7931A"
        }
      ],
      "expo-dev-client",
      "expo-font",
      "expo-router",
      "expo-web-browser",
      "expo-localization"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "4ad84fe8-e0f0-4189-bf64-19862b8f102a"
      }
    },
    "owner": "hrznbtc"
  }
}
